<p style="color: green"><%= notice %></p>

<h1>Quotes</h1>

<div id="quotes" class="card bg-body-tertiary" style="margin-bottom:10px">
<div class="card-body">
  <% @quotes.each do |quote| %>
    <%= render quote %>
    <p>
      <%= link_to "Show this quote", quote %>
    </p>
  <% end %>
</div>
</div>

<%= link_to "New quote", new_quote_path %>
